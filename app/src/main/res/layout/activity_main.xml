<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bill Checker"
            android:textColor="#124E04"
            android:textStyle="bold"
            android:textSize="33sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4sp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:text="Total Bill :"
            android:textStyle="bold"
            android:textColor="#091355"
            android:textSize="25sp"/>
        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_totalbill"
            android:background="#9439BF2F"
            android:layout_marginStart="5dp"
            android:inputType="numberDecimal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" tk "
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4sp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:text="Retention :"
            android:textSize="20sp"/>
        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_advance"
            android:layout_marginStart="5dp"
            android:background="#9439BF2F"

            android:inputType="numberDecimal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rp_id"
            android:text=" % "
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4sp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:text="Vat :"
            android:textSize="20sp"/>
        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_vat"
            android:layout_marginStart="5dp"
            android:background="#9439BF2F"
            android:inputType="numberDecimal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vp_id"
            android:text=" % "
            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4sp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:text="Income Tax : "
            android:textSize="20sp"/>
        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_incometax"
            android:layout_marginStart="5dp"
            android:background="#9439BF2F"
            android:inputType="numberDecimal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ip_id"
            android:text=" % "
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4sp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:text="Lab Test : "
            android:textSize="20sp"/>
        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_labtest"
            android:layout_marginStart="5dp"
            android:background="#9439BF2F"
            android:inputType="numberDecimal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" tk "
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4sp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:text="Roller Rent : "
            android:textSize="20sp"/>
        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_rollerrent"
            android:layout_marginStart="5dp"
            android:background="#9439BF2F"
            android:inputType="numberDecimal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" tk "
            android:textSize="15sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:text="Deduction Bill ="
            android:textStyle="italic"
            android:textColor="#E53935"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_dediction_view"
            android:layout_marginStart="5dp"
            android:text=""
            android:textStyle="italic"
            android:textColor="#E53935"
            android:textSize="22sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:text="Net Bill : "
            android:textStyle="bold"
            android:textColor="#278803"
            android:textSize="22sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_result_view"
            android:layout_marginStart="22dp"
            android:text=""
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">


        <androidx.cardview.widget.CardView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#2810C5B2"
            android:layout_marginLeft="110dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="1dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/id_result_view2"
                android:textColor="#000000"
                android:textSize="25dp"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_reset"
            android:layout_marginStart="22dp"
            android:layout_weight="1"
            android:text="reset"
            android:textSize="18sp"/>
        <Button
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_submit"
            android:layout_marginStart="33dp"
            android:layout_marginEnd="22dp"
            android:layout_weight="1"
            android:text="Calculate"
            android:textSize="18sp"/>
    </LinearLayout>

</LinearLayout>